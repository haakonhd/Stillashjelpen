<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="3dp"
    android:background="@drawable/border_primary"
    android:padding="10dp">


    <TextView
        android:id="@+id/textView24"
        android:layout_width="120dp"
        android:layout_height="22dp"
        android:layout_marginBottom="8dp"
        android:text="Mangel funnet: "
        android:textSize="15sp"
        app:layout_constraintBottom_toTopOf="@+id/defectMessageTextView"
        app:layout_constraintStart_toStartOf="@+id/defectMessageTextView"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.666" />

    <ImageView
        android:id="@+id/messageListImageView"
        android:layout_width="80dp"
        android:layout_height="80dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_announcement_black_24dp" />


    <TextView
        android:id="@+id/defectDateFound"
        android:layout_width="150dp"
        android:layout_height="20dp"
        android:layout_marginStart="12dp"
        android:text="05.01.02 "
        android:textAlignment="center"
        android:textSize="15sp"
        app:layout_constraintStart_toEndOf="@+id/textView24"
        app:layout_constraintTop_toTopOf="@+id/textView24" />

    <TextView
        android:id="@+id/defectMessageTextView"
        android:layout_width="391dp"
        android:layout_height="50dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="32dp"
        android:text="Kurt"
        android:textSize="15sp"
        app:layout_constraintStart_toEndOf="@+id/messageListImageView"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>