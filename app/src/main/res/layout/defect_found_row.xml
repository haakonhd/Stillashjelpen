    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="52mm"
    android:layout_height="5.2mm">

    <TextView
        android:id="@+id/dateTextView"
        android:layout_width="15mm"
        android:layout_height="5.2mm"
        android:background="@drawable/border_black"
        android:paddingVertical="0.5mm"
        android:paddingHorizontal="0.2mm" />

    <TextView
        android:id="@+id/defectDescriptionTextView"
        android:layout_width="37mm"
        android:layout_height="5.2mm"
        android:background="@drawable/border_black"
        android:paddingVertical="0.5mm"
        android:paddingHorizontal="0.2mm" />
</TableRow>